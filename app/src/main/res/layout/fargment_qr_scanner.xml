<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="match_parent">
    <fragment
        android:id="@+id/barcode"
        android:name="com.google.android.gms.samples.vision.barcodereader.BarcodeCapture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:gvb_auto_focus="true"
        app:gvb_code_format="all_format"
        app:gvb_flash="false"
        app:gvb_rect_colors="@array/rect_color" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:layout_below="@id/barcode"
        android:padding="20dp"
        android:textStyle="bold"
        android:text="Scan device's bar code or Qr code, If there are more than One bar code cover remaining barcodes."/>
    </LinearLayout>
</layout>