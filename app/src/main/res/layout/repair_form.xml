<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/owner_nameRep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Owner's name*" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/imeiRep"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="IMEI*" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/Truck_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Truck no."/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/client_idRep"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Client ID*"/>
            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/spinnerRep"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Reason For Repair"/>

            <com.loconav.lookup.CustomImagePicker
                android:id="@+id/DevimageAfter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                custom:id="view4"
                android:background="?android:selectableItemBackground"
                custom:titleText="Upload Image After Repair"
                custom:limitImages="1"/>
            <Button
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:id="@+id/shareRep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:textSize="18sp"
                android:text="Next"
                android:textColor="#ffffff" />
        </LinearLayout>

    </ScrollView >
