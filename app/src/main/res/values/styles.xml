<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/Button_Style</item>
        <item name="android:timePickerDialogTheme" tools:ignore="NewApi">@style/DialogTheme</item>
        <item name="android:datePickerDialogTheme" tools:ignore="NewApi">@style/DialogTheme</item>
        <item name="android:alertDialogTheme">@style/DialogTheme</item>
        <item name="elevation">0dp</item>
        <item name="colorControlActivated">@color/black</item>
     </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/smalltext_lightgrey</item>
        <item name="android:textColorHint">@color/black_38</item>
        <item name="android:textSize">8sp</item>
    </style>

        <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
            <item name="colorAccent">@color/color_orange</item>
            <item name="android:colorPrimary" tools:ignore="NewApi">#00397F</item>
        </style>
    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
    <style name = "Button_Style" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:colorControlHighlight">#a14040</item>
        <item name="android:paddingRight">10dp</item>
    </style>


    <style name="DialogWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
    </style>

    <style name="DialogHeading">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">-2sp</item>
        <item name="android:textColor">@color/listprimary_black</item>
    </style>

    <style name="DialogContent">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/listprimary_black</item>
    </style>
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@anim/dialog_enter</item>
    </style>



</resources>
